      "name": "Appointments",
      "item": [
        {
          "name": "Créer un rendez-vous",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.id) {",
                  "    pm.environment.set('appointmentId', jsonData.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/appointments",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "appointments"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"patientId\": \"{{patientId}}\",\n  \"practitionerId\": \"{{practitionerId}}\",\n  \"startAt\": \"2024-01-15T09:00:00Z\",\n  \"endAt\": \"2024-01-15T09:30:00Z\",\n  \"reason\": \"Consultation de routine\",\n  \"urgency\": \"ROUTINE\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Reprogrammer un rendez-vous",
          "event": [],
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/appointments/reschedule",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "appointments",
                "reschedule"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Annuler un rendez-vous",
          "event": [],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/appointments/:id/cancel",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "appointments",
                ":id",
                "cancel"
              ]
            }
          },
          "response": []
